<article>
  <div class="product_show">
    <div class="container">
      <div class="row">
            <div class="col-md-6 mb-3 pt-5 text-center">
              <div class="card mb-5">
                <div class="card-header">
                  <small class="border-bottom">タイトル</small>
                  <%= link_to(product_path(@product),class: "link_color") do %>
                    <%= @product.title %>
                  <% end %>
                  </div>
                <div class="card-body">
                  <div class="container">
                    <div class="row">
                      <div class="col-md-6">
                        <% if @product.user.image? %>
                          <%= image_tag( @product.user.image.url,class: 'icon') %>
                        <% else %>
                          <%= image_tag("default_icon.png",class: 'icon-product-page')   %>
                        <% end %>
                        <h5 class="card-text mt-2"><%= @product.user.name  %></h5>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="card-footer  text-muted">
                    <% if current_user==@product.user %>

                      <div>
                        <h5>
                          <%= link_to(edit_product_path(@product),class: " btn  pt-1 pb-1 pr-3 pl-3") do %>
                            <h5><i class="far fa-edit"></i></h5>
                            <small>編集</small>
                          <% end %>
                        </h5>

                        <h5 class="mb-0">
                          <%= link_to(product_path(@product), method: :delete, data: { confirm: '本当に削除しますか？' } , class: "btn") do %>
                            <h5><i class="fas fa-trash-alt"></i></h5>
                            <small>削除</small>
                          <% end %>
                        </h5>

                        <h5>
                          <%= link_to(root_path, { class: " btn pt-1 pb-1 pr-2 pl-2"}) do %>
                            <h5><i class="fas fa-redo"></i></h5>
                            <small>一覧に戻る</small>
                          <% end %>
                        </h5>
                      </div>
                    <% else %>
                    　<div>
                      <h5>
                      　  <%= link_to(root_path, { class: " btn pt-1 pb-1 pr-2 pl-2"}) do %>
                      　    <h5><i class="fas fa-redo"></i></h5>
                      　    <small>一覧に戻る</small>
                      　  <% end %>
                      　</h5>
                    　</div>
                    <% end %>
                </div>
              </div>
            </div>
      </div>
    </div>
  </div>
</article>
