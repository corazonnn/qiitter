<div class="product_show">
    <div class="container pt-5">
      <div class="row">
            <div class="col-md-6 offset-md-3 mb-3 text-center">
              <div class="card mb-5">
                <div class="card-header text-center">
                  <small class="border-bottom">作成者</small>
                  <h5 class="card-text"><%= @product.user.name  %></h5>
                  </div>
                <div class="card-body">
                  <%= form_with(model: @product,method: :put,local: true) do |f| %>
                　  <!--POSTで送るときはからなずエラーメッセージの表示をする-->
                    <%= render 'layouts/error_messages', model: f.object %>
                    <div class="form-group text-left" id="new-product">
                      <%= f.label :title, 'タイトル' %>
                      <%= f.text_field :title, class: 'form-control' %>
                    </div>


                    <div class="form-group text-left" id="new-product">
                      <%= f.label :body, 'ボディ' %>
                      <%= f.text_area :body, class: 'form-control' %>
                    </div>
                    <%= f.submit '更新',class: "btn btn-success"%>
                  <% end %>
                  <p class="pt-3"><%= link_to("一覧に戻る", root_path, { class: " btn btn-primary"}) %></p>
                </div>
              </div>
            </div>
      </div>
    </div>
  </div>
