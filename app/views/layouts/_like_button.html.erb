<% if user_signed_in? %>
  <% if current_user.liked?(product) %>
    <%= form_with(model: current_user.likes.find_by(product_id: product.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :product_id, product.id %>
      <%= f.submit 'はずす'%><%= product.likes.count %>
    <% end %>
  <% else %>
  <%= form_with(model: current_user.likes.build, local: true) do |f| %>
    <%= hidden_field_tag :product_id, product.id %>
    <%= f.submit 'いいね' %><%= product.likes.count %>
  <% end %>
  <% end %>
<% end %>
