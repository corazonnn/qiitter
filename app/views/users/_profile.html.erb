<div class="side active">
  <div class="ui card centered fluid">
    <div class="image">
      <%= image_tag @user.image.url,class: 'icon' %>
    </div>
    <div class="content">
      <a class="header"><%= @user.name %></a>
      <div class="description">
        <div class="ui equal width grid">
          <div class="column">
            <div class="ui small statistic">
              <div class="value">
                <%= @count_products %>
              </div>
              <div class="label">
                投稿
              </div>
            </div>
          </div>
          <div class="column">
            <div class="ui small statistic">
              <div class="value">
                <%= @count_followings %>
              </div>
              <div class="label">
                <%= link_to "フォロー", followings_user_path(@user),style: "color:#232946;" %>
              </div>
            </div>
          </div>
          <div class="column">
            <div class="ui small statistic">
              <div class="value">
                <%= @count_followers %>
              </div>
              <div class="label">
                <%= link_to "フォロワー", followers_user_path(@user),style: "color:#232946;" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="extra content">
      <% if current_user == @user%>
        <% if current_user.name == "guest"%>
          <button class="fluid ui button" style="background:#eebbc3;">ゲストログインは編集できません</button>
        <% else %>
          <button class="fluid ui button" style="background:#eebbc3;"><%= link_to "プロフィールを編集", edit_user_registration_path,style: "color:#232946;" %></button>
        <% end %>
      <% else %>
        <a id="follow_button_<%= @user.id %>">
          <%= render 'relationships/follow_button', user: @user %>
        </a>
      <% end %>
    </div>
  </div>
</div>
